{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports" : true,
        "sourceMap": true,
        "strict": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        ".vscode",
        "src/tests/**"
    ],
    "skipLibCheck": true,
}