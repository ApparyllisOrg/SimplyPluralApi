{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"plugins": ["@typescript-eslint", "sonarjs"],
	"extends": ["eslint:recommended", "plugin:@typescript-eslint/eslint-recommended", "plugin:@typescript-eslint/recommended", "plugin:sonarjs/recommended", "plugin:security/recommended"],
	"rules": {
		"@typescript-eslint/no-unused-vars": "off",
		"@typescript-eslint/no-unused-vars-experimental": "error",
		"@typescript-eslint/explicit-function-return-type": "off",
		"@typescript-eslint/explicit-module-boundary-types": "off",
		"indent": ["warn", "tab"],
		"max-len": ["warn", { "code": 300, "ignoreComments": true }],
		"no-async-promise-executor": "warn",
		"@typescript-eslint/noe-explicit-any": "off",
		"sonarjs/no-duplicate-string": "off",
		"sonarjs/cognitive-complexity": "off"
	}
}
